{
  "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier", "tslint-react-hooks"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "public/*",
      "dist/*",
      "coverage/*",
      "src/serviceWorker.ts"
    ]
  },
  "rules": {
    "no-implicit-dependencies": [
      true,
      ["common", "components", "containers", "contexts", "types"],
      "dev"
    ],
    "no-submodule-imports": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "react-hooks-nesting": "error"
  }
}